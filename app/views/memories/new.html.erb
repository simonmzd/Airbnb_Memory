<div class="container mt-4">
  <div class="card p-4" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); background-color: #f9f9f9;">
    <h2 class="text-center mb-4" style="color: #00C7BE;">Créer une nouvelle Mémoire</h2>

    <%= simple_form_for @memorie do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.input :title, label: 'Titre', input_html: { class: 'form-control' } %>
      </div>

      <div class="form-group">
        <%= f.input :description, label: 'Description', input_html: { class: 'form-control', rows: 4 } %>
      </div>

      <div class="form-group">
        <%= f.input :date, as: :string, label: 'Date', input_html: { class: 'form-control', value: @memorie.date&.strftime("%Y-%m-%d") || f.object.date, data: { controller: "datepicker" } }, label_html: { style: 'font-weight: bold; color: #333;' } %>
      </div>

      <div class="form-group">
        <%= f.input :location, label: 'Localisation', input_html: { class: 'form-control', value: @memorie.location || f.object.location } %>
      </div>

      <div class="form-group">
        <label for="memorie_images" style="font-weight: bold; color: #333; margin-bottom: 5px; display: block;">Images</label>
        <div class="custom-file" style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; background-color: white; position: relative;">
          <%= f.input :images, as: :file, input_html: { multiple: true, class: 'custom-file-input', id: 'memorie_images', style: 'position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;' }, label: false %>
          <label for="memorie_images" class="custom-file-label" style="color: #666; font-style: italic;" id="file-count-label">Aucun fichier choisi</label>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= f.submit "Créer une Mémoire", class: 'btn btn-custom mr-2' %>
        <%= link_to "Retour à la liste", root_path, class: 'btn btn-outline-custom' %>
      </div>
    <% end %>
  </div>
</div>
