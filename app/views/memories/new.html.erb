<div class="container mt-4">
  <div class="card p-4" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); background-color: #f9f9f9;">
    <h2 class="text-center mb-4" style="color: #00C7BE;">Créer une nouvelle Mémoire</h2>

    <%= simple_form_for @memorie do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.input :title, label: 'Titre', input_html: { class: 'form-control' }, label_html: { style: 'font-weight: bold; color: #333;' } %>
      </div>

      <div class="form-group">
        <%= f.input :description, label: 'Description', input_html: { class: 'form-control', rows: 4 }, label_html: { style: 'font-weight: bold; color: #333;' } %>
      </div>

      <div class="form-group">
        <label for="memorie_images" style="font-weight: bold; color: #333; margin-bottom: 5px; display: block;">Images</label>
        <div class="custom-file" style="border: 1px solid #ddd; border-radius: 5px; padding: 10px; background-color: white;">
          <%= f.input :images, as: :file, input_html: { multiple: true, class: 'custom-file-input', id: 'memorie_images' }, label: false %>
          <label for="memorie_images" class="custom-file-label" style="color: #666; font-style: italic;">Aucun fichier choisi</label>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= f.submit "Créer une Mémoire", class: 'btn btn-custom mr-2' %>
        <%= link_to "Retour à la liste", memories_path, class: 'btn btn-outline-custom' %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .btn-custom {
    background-color: #00C7BE;
    color: white;
    padding: 10px 20px;
    border: 2px solid #00C7BE;
    border-radius: 5px;
    transition: all 0.3s ease;
    font-weight: bold;
  }
  .btn-custom:hover {
    background-color: white;
    color: #00C7BE;
  }
  .btn-outline-custom {
    color: #00C7BE;
    padding: 10px 20px;
    border: 2px solid #00C7BE;
    border-radius: 5px;
    transition: all 0.3s ease;
    font-weight: bold;
    text-decoration: none;
    background-color: transparent;
  }
  .btn-outline-custom:hover {
    background-color: #00C7BE;
    color: white;
  }
  .custom-file {
    overflow: hidden;
    position: relative;
  }
  .custom-file-input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
  }
  .custom-file-label {
    padding: 10px;
    background-color: #fff;
    border: none;
    cursor: pointer;
    display: block;
    text-align: left;
    font-size: 0.9rem;
  }
  .custom-file-label::after {
    content: "Sélectionner des fichiers";
    background-color: #00C7BE;
    color: white;
    padding: 10px 15px;
    border-radius: 5px;
    margin-left: 10px;
    display: inline-block;
    transition: all 0.3s ease;
  }
  .custom-file-input:focus + .custom-file-label::after {
    background-color: #00968E;
  }
</style>
