<% @memories.each do |memorie| %>
  <div>
    <%= link_to memorie.title, memory_path(memorie) %>
    <% if memorie.images.attached? %>
      <!-- Si l'image est attachÃ©e via ActiveStorage -->
      <%= image_tag url_for(memorie.images.first), height: 300, width: 400 %>
    <% else %>
      <!-- Sinon, on suppose que l'image vient de Cloudinary -->
      <%= cl_image_tag(memorie.images.first.key, height: 300, width: 400, crop: :fill) %>
    <% end %>
  </div>
<% end %>
